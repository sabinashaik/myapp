pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        TOMCAT_URL = "http://52.203.118.246:8082/manager/text"
        APP_NAME   = "myapp"
        NOTIFY_TO  = "sabinashaik228@gmail.com"
        FAILED_STAGE = ""
    }

    tools {
        maven "MAVEN3"
        jdk "JDK21"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/sabinashaik/myapp.git',
                    credentialsId: 'github-creds'
            }
            post {
                failure {
                    script { env.FAILED_STAGE = "Checkout" }
                }
            }
        }

        stage('Build + Test + Package') {
            steps {
                sh 'mvn -U clean test package'
            }
            post {
                failure {
                    script { env.FAILED_STAGE = "Build + Test + Package" }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar2'
                }
            }
            post {
                failure {
                    script { env.FAILED_STAGE = "SonarQube Analysis" }
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'nexus-creds',
                    usernameVariable: 'NEXUS_USER',
                    passwordVariable: 'NEXUS_PASS'
                )]) {
                    sh '''
                      mvn deploy -DskipTests \
                        -Dnexus.username=$NEXUS_USER \
                        -Dnexus.password=$NEXUS_PASS
                    '''
                }
            }
            post {
                failure {
                    script { env.FAILED_STAGE = "Upload to Nexus" }
                }
            }
        }

        stage('Deploy to Tomcat (Docker)') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'tomcat-creds',
                    usernameVariable: 'TOMCAT_USER',
                    passwordVariable: 'TOMCAT_PASS'
                )]) {
                    sh '''
                      set -e
                      echo "Deploying WAR to Tomcat..."
                      ls -l target || true

                      curl --fail -v -u $TOMCAT_USER:$TOMCAT_PASS \
                        -T target/${APP_NAME}.war \
                        "${TOMCAT_URL}/deploy?path=/${APP_NAME}&update=true"
                    '''
                }
            }
            post {
                failure {
                    script { env.FAILED_STAGE = "Deploy to Tomcat (Docker)" }
                }
            }
        }
    }

    post {
        success {
            emailext(
                subject: "Pipeline SUCCESS",
                body: """SUCCESS
Job: ${env.JOB_NAME}
Build Number: ${env.BUILD_NUMBER}
Build URL: ${env.BUILD_URL}
""",
                to: "${env.NOTIFY_TO}"
            )
        }

        failure {
            // If it failed before any stage post ran, show something meaningful
            script {
                if (!env.FAILED_STAGE?.trim()) {
                    env.FAILED_STAGE = "Unknown (failed before stage post executed)"
                }
            }

            emailext(
                subject: "Pipeline FAILURE",
                body: """FAILURE
Job: ${env.JOB_NAME}
Build Number: ${env.BUILD_NUMBER}
Failed Stage: ${env.FAILED_STAGE}
Build URL: ${env.BUILD_URL}
""",
                to: "${env.NOTIFY_TO}"
            )
        }

        always {
            cleanWs()
        }
    }
}
